    extends layout
block content
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
    .container-fluid
        a.navbar-brand(href='/home')
        img.d-inline-block.align-text-top(src='icons8-automatic-car-wash-48 (1).png' alt='' width='40' height='40')
        h3.title Zawash
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
            a.nav-link.active(aria-current='page' href='/home') Home
            li.nav-item
            a.nav-link.disabled(href='/register') Add Washer
            li.nav-item.dropdown
            a#navbarDropdown.nav-link.dropdown-toggle.disabled(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                | Registration
            ul.dropdown-menu(aria-labelledby='navbarDropdown')
                li
                a.dropdown-item(href='customerReg') Customer Register
                li
                a.dropdown-item(href='/expenses') Expenses
                li
                hr.dropdown-divider
                li
                a.dropdown-item(href='/create') Create New User
        ul.navbar-nav
            li.nav-item
            a.nav-link(href='/login' tabindex='-1' aria-current='true') Login
        br
        form(method="POST" action='/register/manager')
            div.form-row
                div.col.form-group
                    label Item type
                    select.form-control(name="item")
                        option(value="polish")  Polish
                        option(value="detergent") Powdered detergents
                        option(value="electricity") Electricity units
                div.col.form-group
                    label Amount
                    input.form-control(type="number" name="amount")
            div.form-row
                div.col.form-group
                    button.btn.btn-primary.btn-block Register 