extends layout
block content
    link( href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    //- link(href='homeOfzawash.css' rel='stylesheet')
    title Zawash
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        .container-fluid
            a.navbar-brand(href='#')
                img.d-inline-block.align-text-top(src='icons8-automatic-car-wash-48.png' alt='' width='40' height='40')
                h3.title Payouts
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.me-auto.mb-2.mb-lg-0
                    li.nav-item
                        a.nav-link(aria-current='page' href='/customerReg') Customer Reg.
                    li.nav-item 
                        a.nav-link.active(aria-current='page' href='/payouts') Washer Payouts 
                    li.nav-item 
                        a.nav-link(aria-current='page' href='/employeeDetails') Washer details 
                    li.nav-item 
                        a.nav-link(aria-current='page' href='/expenseReports') Expense Report 
                    li.nav-item 
                        a.nav-link(aria-current='page' href='/revenue') Revenue 
                    li.nav-item 
                        a.nav-link(aria-current='page' href='/weekly') Weeks collection
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href='/login' tabindex='-1' aria-current='true') Login
   
    br
    div.row.justify-content-center
            div.col-md-8
                div.card-body
                  header.card-header
                    h4.card-title Payouts
                    form.search(action='/payouts')
                            div.form-row
                                div.col-md-8
                                    input.form-control(type="date" name="searchdate" value=defaultDate)
                                div.col-md-4
                                    input.btn.btn-primary.btn-block(type="submit")
                    br
                    table.table.table-bordered 
                        thead
                            tr
                                th Full Name 
                                th Cars washed
                                th Payout Amount
                                
                        tbody
                            if employees.length
                                each employee in employees
                                    tr
                                        td #{employee.details[0].username}
                                        td #{employee.count}
                                        td #{employee.totalPayout}
                                tr
                                    th(colspan=2) Total Payout 
                                    td #{new Intl.NumberFormat().format(sumPayout.totalPayoutPerDay)}
                                                
                    

        
                