extends layout
block content
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
              .container-fluid
                  a.navbar-brand(href='#')
                      img.d-inline-block.align-text-top(src='icons8-automatic-car-wash-48.png' alt='' width='40' height='40')
                      h3.title Zawash
                  button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-live ='false' aria-label='Toggle navigation')
                      span.navbar-toggler-icon
                  #navbarSupportedContent.collapse.navbar-collapse
                      ul.navbar-nav.me-auto.mb-2.mb-lg-0
                          li.nav-item
                            a.nav-link(aria-current='page' href='/expenses') Expenses Reg.
                          li.nav-item
                            a.nav-link(aria-current='page' href='/payouts') Washer Payouts
                          li.nav-item
                            a.nav-link(aria-current='page' href='/employeeDetails')  Washer Details
                          li.nav-item 
                            a.nav-link.active(aria-current='page' href='/expenseReports') Expense Reports
                          li.nav-item 
                            a.nav-link.active(aria-current='page' href='/revenue') Revenue
                          
                      ul.navbar-nav
                          li.nav-item
                              a.nav-link(href='/login/logout' tabindex='-1' aria-current='true') Login
    br
    div.row.justify-content-center
        div.col-md-6
            div.card-body
                header.card-header
                h4.card-title Expense Details
                br
                form.search(action='/payouts/expenses')
                    div.form-row
                        div.col-md-8
                            input.form-control(type="date" name="searchdate" value=defaultDate)
                        div.col-md-4
                            input.btn.btn-primary.btn-block(type="submit")
                br
                table.table.table-bordered 
                    thead
                        tr
                            th Date of Entry
                            th Item
                            th Amount
                    tbody
                    if expenses.length
                        each expense in expenses
                            tr
                                td #{moment(expense.doe).format('DD-MM-YYYY')}
                                td #{expense.item}
                                td #{expense.amount}
                        tr
                            th(colspan=2) Total Expenses
                            td #{new Intl.NumberFormat().format(total.totalExpense)}
