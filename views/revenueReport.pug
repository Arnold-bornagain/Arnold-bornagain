extends layout 
block content 
    title Zawash
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        .container-fluid
            a.navbar-brand(href='#')
                img.d-inline-block.align-text-top(src='icons8-automatic-car-wash-48.png' alt='' width='40' height='40')
                h3.title Payouts
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.me-auto.mb-2.mb-lg-0
                    li.nav-item
                        a.nav-link(aria-current='page' href='/customerReg') Customer Reg.
                    li.nav-item 
                        a.nav-link(aria-current='page' href='/payouts') Washer Payouts 
                    li.nav-item 
                        a.nav-link(aria-current='page' href='/employeeDetails') Washer details 
                    li.nav-item 
                        a.nav-link(aria-current='page' href='/expenseReports') Expense Report 
                    li.nav-item 
                        a.nav-link.active(aria-current='page' href='/revenue') Revenue 
                    li.nav-item 
                        a.nav-link(aria-current='page' href='/weekly') Weeks collection
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href='/login' tabindex='-1' aria-current='true') Login
   
    br
    div.row.justify-content-center
            div.col-md-8
                div.card-body
                  header.card-header
                    h4.card-title Revenue
                    form.search(action='/revenue')
                                div.form-row
                                    div.col-md-8
                                        input.form-control(type="date" name="searchdate" value=defaultDate)
                                    div.col-md-4
                                        input.btn.btn-primary.btn-block(type="submit")
                    br
                    table.table.table-bordered 
                        thead
                            tr
                                th Date of Arrival
                                th Vehicle
                                th Amount
                        tbody
                        if collections.length
                            each collection in collections
                                tr
                                    td #{moment(collection.doa).format('DD-MM-YYYY hh:mm')}
                                    td #{collection.pnumber}
                                    td #{collection.price}
                            tr
                                th(colspan=2) Total Revenue
                                td #{new Intl.NumberFormat().format(totalRevenue.totalCollection)}
